\ProvidesPackage{listingstyles}[2011/11/09 v1.0 Configure custom listings styles]

\RequirePackage{listings}
\RequirePackage{color}

\lstdefinestyle{numbers} {
breaklines, 
numbers=left, 
stepnumber=1, 
numberstyle=\tiny, 
numbersep=10pt, 
basicstyle=\scriptsize, 
frame=l, 
xleftmargin=6pt, 
numbersep=4pt, 
captionpos=b, 
showspaces=false, 
showtabs=false, 
showstringspaces=false
}

\lstdefinestyle{nonumbers}
{style=numbers,numbers=none}
\lstdefinestyle{Bash}
{language=Bash,style=nonumbers}
\lstdefinestyle{XML}
{language=Bash,style=numbers}
\lstdefinestyle{Java}
{language=Java,style=numbers}
\lstdefinestyle{Groovy}
{language=Groovy,style=numbers}
\lstdefinestyle{R}
{language=R,style=numbers}

\lstdefinestyle{framed}
{basicstyle=\scriptsize, frame=single, xleftmargin=6pt, numbersep=4pt, captionpos=b}

\definecolor{lstbackgroundcolor}{rgb}{0.95,1.0,1.0}
\lstset{backgroundcolor=\color{lstbackgroundcolor}}

\definecolor{groovyblue}{HTML}{0000A0}
\definecolor{groovygreen}{HTML}{008000}
\definecolor{darkgray}{rgb}{.4,.4,.4}
 
\lstdefinelanguage{Groovy}[]{Java}{
  keywordstyle=\color{groovyblue}\bfseries,
  stringstyle=\color{groovygreen}\ttfamily,
  keywords=[3]{evaluate, with, each, findAll, groupBy, collect, inject, eachWithIndex},
  morekeywords={def, as, in, use},
  moredelim=[is][\textcolor{darkgray}]{\%\%}{\%\%},
  moredelim=[il][\textcolor{darkgray}]{§§},
}

\setlength{\columnseprule}{.1pt}

